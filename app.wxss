/**app.wxss**/
@import "/wxParse/wxParse.wxss";
page {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background: #1f1f1f;
}
.wrapper {
  padding-bottom: 150rpx;
  display: flex;
  flex-direction: column
}
image{
  height: auto;
}

.select-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.select-box-cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
}

.select-box {
  width: 100%;
  height: 500px;
  position: absolute;
  top: 100vh;
  left: 0;
  bottom: 0;
  z-index: 2;
  display: flex;
  flex-direction: column
}

.select-box-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.6);
}

.select-box-title{
  display: flex;
  align-items: center;
  background-color: #343434;
  position: relative;
  z-index: 1;
  height: 90rpx;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.select-box-title-text{
  margin-left: 4vw;
  color: #fff;
  height: 42rpx;
  border-bottom: 2rpx transparent solid;
}

.select-box-button-confirm{
  position: absolute;
  right: 4vw;
  height: 50rpx;
  border-radius: 12rpx;
  width: 100rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #000;
  background-image: linear-gradient(#ff9c00, #FFBA00);
}

.screen-title-select {
  color: #ffae00;
  border-bottom: 2rpx #ffae00 solid;
}

.select-row {
  z-index: 3;
  display: flex;
  text-align: center;
  flex: 1
}

.box-left {
  width: 40vw;
  height: 100%;
  text-align: center;
  background-color: #262626;
  border-right: 4rpx #343434 solid;
}

.box-item {
  font-size: 24rpx;
  color: #696969;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #515151;
}

.item-left{
  margin-left: 24rpx;
  margin-right: 24rpx
}

.item-right{
  margin-left: 48rpx;
  margin-right: 48rpx
}

.box-right {
  top: 100rpx;
  width: 60vw;
  bottom: 0;
  text-align: center;
  background-color: #262626;
}

.box-item-acitve {
  color: #131313;
  background-image: linear-gradient(#ff9c00, #FFBA00);
}

.item-single {
  width: 28vw;
  line-height: 52.7rpx;
  color: #696969;
  border-radius: 12rpx;
  height: 68rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #515151;
  margin-left: 4vw;
  margin-top: 4vw;
}

.select-box-button-cancel{
  position: absolute;
  left: 4vw;
  height: 50rpx;
  border-radius: 12rpx;
  width: 100rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #AAAAAA
}

.bar-title{
  color: #fff
}

.select-row-item {
  width: 28vw;
  line-height: 52.7rpx;
  color: #696969;
  border-radius: 12rpx;
  height: 68rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #515151;
  margin-left: 4vw;
  margin-top: 4vw;
}

.select-row-box {
  background-color: #262626;
  flex-wrap: wrap;
  width: 100%;
}
