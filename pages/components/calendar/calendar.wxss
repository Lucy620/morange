.calendar {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* 标题 */

.calendar-title {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  height: 49rpx;
  box-sizing: border-box;
  background-color: #181818;
  margin-bottom: 5rpx;
}

.calendar-title .title {
  color: #fff;
  font-size: 20rpx;
  padding-left: 35rpx;
}

.arrow {
  width: 24rpx;
  height: 15rpx;
  margin-left: 10rpx;
}

/* 星期 */

.calendar-week {
  display: flex;
  text-align: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #fff;
  background-color: #181818;
}

.calendar-week .item {
  flex: 1;
}

/* 日期 */

.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #181818;
}

.calendar-container .grid {
  display: inline-block;
  width: 14.28571428571429%;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
  color: #525252;
  padding: 15rpx 0;
  font-size: 24rpx;
}

.calendar-container .grid .self {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -8rpx;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgb(49, 120, 228);
}

.s-black {
  position: relative;
  z-index: 1;
  color: #000;
}

.calendar-week-select{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
  background-image: linear-gradient(#ffae00, #ffae00);
  border-radius: 50%;
}

/* 滚动展示 */

.calendar-x {
  white-space: nowrap;
  padding: 20rpx 0;
  height: 110rpx;
}

.calendar-x .grid {
  display: inline-block;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
  width: 70rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.calendar-x .grid:last-child {
  margin-right: 20rpx;
}

.calendar-x .grid .self {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: rgb(49, 120, 228);
  border: 3rpx solid #fff;
}

.calendar-x .grid.gray {
  color: #ccc;
}

.calendar-x .grid .wrap.select {
  background: rgb(49, 120, 228);
  border-radius: 10rpx;
  color: #fff;
  margin: 0 auto;
}
