/* pages/private_education/course.wxss */

/***轮播**/

.wrapper {
  background-color: #2A2A2A;
}

swiper {
  height: 100%;
}

.slide-image {
  width: 100%;
}

video{
  width: 100%;
  height: 100%;
}
/**教练故事**/

.coach-story {
  width: 720rpx;
  background-color: #1c1c1c;
  border-radius: 13.3rpx;
  margin: 0rpx auto;
  padding-top: 20rpx;
}

.coach-title {
  color: white;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.story-box {
  display: flex;
  min-height: 175rpx;
}

.details-box {
  flex: 1;
  padding: 20rpx 0 20rpx 20rpx;
  text-align: center;
}

.coach-name {
  color: #fff;
  text-align: left;
}

.story {
  text-align: left;
  overflow: hidden;
  font-size: 24rpx;
  margin-top: 30rpx;
  color: #818181;
}

.arrow {
  width: 24rpx;
  height: 15.3rpx;
}

.user-coach {
  width: 99rpx;
  height: 99rpx;
  border-radius: 50%;
  margin: 20rpx;
}

/**课时 时间 门店**/

.list-box {
  width: 723rpx;
  height: 348rpx;
  background-color: #1c1c1c;
  border-radius: 13rpx;
  margin: 20rpx auto;
}

.list-row {
  display: flex;
  padding: 30rpx 20rpx;
}

.list-row:last-child {
  border: none;
}

.divider {
  height: 2rpx;
  background-color: #2c2c2c;
  width: 90%;
  margin: auto;
 }

.course-icon {
  width: 31rpx;
  height: 31rpx;
}

.list-details {
  flex: 1;
  color: #fff;
  margin-left: 25rpx;
  font-size: 24rpx;
}

.s-yellow {
  color: #ffae00;
  margin-left: 20rpx;
}

.address-icon {
  width: 35rpx;
  height: 35rpx;
}

/**简介 事项 健身步骤**/

.wxParse-box {
  width: 723rpx;
  margin: 15rpx auto;
  color: #818181;
  border-radius: 13.3
}

.title-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 72rpx;
  background-color: #121212;
  border-top-left-radius: 13rpx;
  border-top-right-radius: 13rpx;
}

.icon {
  width: 31rpx;
  height: 32rpx;
}

.title {
  color: #fff;
  margin-left: 25rpx;
  font-size: 27rpx;
}

.introduction {
  padding: 10px;
  font-size: 24rpx;
  line-height: 1.8;
  color: #818181;
  overflow: hidden;
}

/**按钮**/

.btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 80rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  width: 90vw;
  color: #000;
  border-radius: 50rpx;
  margin: auto;
  background:linear-gradient(0deg,rgba(255,135,28,1),rgba(255,167,14,1));
  background-size: 100%;
}
