}

.text {
  color: #6c6c6c;
  font-size: 24rpx;
  margin-top: 100rpx;
}

.address {
  color: #6c6c6c;
  margin-top: 30rpx;
  font-size: 24rpx;
}

.btn-box {
  margin: 0 20rpx;
  margin-top: 50rpx;
  border-top: 3rpx dashed #975600;
}

.time-tips {
  color: #000;
  text-align: center;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 30rpx;
}

.btn {
  width: 639rpx;
  height: 93rpx;
  line-height: 93rpx;
  margin: 20rpx auto 0;
  text-align: center;
  color: #000;
  font-size: 40rpx;
  background-image: linear-gradient(#ff9c00, #ff9c00);
  border-radius: 7rpx;
}

.btn::after {
  border: 0;
}

.home-btn {
  position: fixed;
  right: 15rpx;
  bottom: 100rpx;
  width: 111rpx;
