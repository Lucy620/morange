.box {
  text-align: center;
}

.poster {
  width: 657rpx;
  height: 292rpx;
  margin: 20rpx auto 0;
  border-radius: 13rpx;
}

.container-box {
  width: 697rpx;
  height: 755rpx;
  margin: 0 auto;
  background: url(https://boringcdn.nanningboring.com/molicheng/lesson-collage.png);
  background-size: 100%;
}

.tips {
  text-align: right;
  padding: 35rpx 25rpx 0;
}

.user-img {
  width: 173rpx;
  height: 174rpx;
  border-radius: 50%;
  margin-top: -200rpx;
  border: solid 1rpx #fff;
}

.text-box {
  margin-top: 20rpx;
  text-align: center;
}

.user-name {
  font-size: 33rpx;
}

.s-yellow {
