          <swiper-item bindtap='jumpPage' data-url="{{item.url}}">
            <image src="{{item.img}}" class="slide-image" mode="widthFix"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!--tab栏-->
