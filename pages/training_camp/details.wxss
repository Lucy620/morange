/* pages/training_camp/details.wxss */

/***轮播**/

swiper {
  height: 100%;
}

.slide-image {
  width: 100%;
}

video{
  width: 100%;
  height: 100%;
}
/***tab栏**/

.position-box {
  position: relative;
}


.select-tab {
  color: #fff;
}

.row-box:last-child {
  border: none;
}

/**近期营期**/

.box-title {
  padding-top: 62rpx;
  width: 723rpx;
  height: 88rpx;
  background-color: #1c1c1c;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.title-icon-box {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.icon {
  width: 31rpx;
  height: 31rpx;
}

.title-text {
  color: #fff;
  font-size: 32rpx;
  margin-left: 15rpx;
}

.city-title {
  color: #959595;
  font-size: 24rpx;
  padding: 0 20rpx;
}

/**训练营**/

.store-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 55.3rpx;
  padding: 0 20rpx;
  background-color: #000;
}

.store-address {
  font-size: 24rpx;
  color: #fff;
}

.map-box {
  display: flex;
  align-items: center;
}

.map-text {
  font-size: 24rpx;
  color: #818181;
}

.map-arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(-90deg);
  margin-left: 5rpx;
  margin-top: 8rpx;
}

/**教练**/

.box {
  display: flex;
  align-items: center;
  min-height: 162rpx;
  padding: 0 25rpx;
  background-color: #181818;
  margin-bottom: 5rpx;
  position: relative;
}

.coach {
  width: 96.7rpx;
  height: 96.7rpx;
  background-color: #272727;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}

.mid {
  flex: 1;
  margin-left: 25rpx;
  margin-right: 15rpx;
}

.mid-title {
  color: #fff;
  height: 50rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 26.7rpx;
}

.name {
  color: #bcbcbc;
  font-size: 20rpx;
}

.date {
  color: #ffae00;
  font-size: 24rpx;
}

.money {
  font-size: 20rpx;
  color: #fff;
  margin-left: 10rpx;
}

.limit {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #fff;
}

.btn {
  width: 99rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  border-radius: 6.7rpx;
  background: url(https://boringcdn.nanningboring.com/molicheng/curriculum-btn.png);
  background-size: 100%;
  position: relative;
  z-index: 1;
}

.full-btn {
  background: none;
  border-radius: 10rpx;
  border: solid 3rpx #424242;
  color: #bcbcbc;
}

/**简介 事项 健身步骤**/

.wxParse-box {
  width: 723rpx;
  margin: 0 auto;
  color: #818181;
}

.title-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 72rpx;
  background-color: #121212;
  border-top-left-radius: 13rpx;
  border-top-right-radius: 13rpx;
}

.icon {
  width: 31rpx;
  height: 32rpx;
}

.title {
  color: #fff;
  margin-left: 25rpx;
  font-size: 27rpx;
}

.introduction {
  padding: 10px;
  font-size: 24rpx;
  line-height: 1.8;
  color: #818181;
  overflow: hidden;
}

/**按钮**/

.tips-btn {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 80rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #000;
 background:linear-gradient(0deg,rgba(255,144,46,1),rgba(255,186,0,1));
  background-size: 100%;
}

.s-black {
  background: #333;
  color: #fff;
}
