/* pages/my_ reservation/my_reservation.wxss */

/**头部**/

page {
  background: #181818;
}

.head-box {
  display: flex;
  align-items: center;
  height: 215.3rpx;
  background: #131313;
}

.row-box {
  flex: 1;
  text-align: center;
}

.row-number {
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-icon {
  width: 35rpx;
  height: 77rpx;
  margin-right: 5rpx;
}

.row-text {
  color: #5c5c5c;
  font-size: 24rpx;
  margin-top: 25rpx;
}

.user-img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

/**卡路里**/
.calorie-box{
  height: 122rpx;
  background: url(https://boringcdn.nanningboring.com/molic/calorie-bg.png);
  background-size: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.calorie{
  width: 301rpx;
  text-align: center;
}
.calorie-number{
  display: flex;
  align-items: center;
  justify-content: center;
}
.calorie-text{
  font-size: 20rpx;
  color: #ff9c2b;
  margin-top: 15rpx;
}

/**待进行**/

.conduct-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  position: relative;
}

.conduct-row::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 710rpx;
  height: 5rpx;
  margin: 0 auto;
  background: #1f1f1f;
}

.conduct-row:last-child:after {
  width: 0;
  height: 0;
  background: none;
}

.coach {
  flex: 1;
  display: flex;
  align-items: center;
}

.user-coach {
  width: 127rpx;
  height: 127rpx;
  border-radius: 50%;
}

.name-box {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.course-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 26.7rpx;
  color: #fff;
}

.name {
  color: #bcbcbc;
  font-size: 20rpx;
  margin: 10rpx 0;
}

.btn-tips {
  background-color: #bcbcbc;
  border-radius: 7rpx;
  font-size: 20rpx;
  color: #000;
  padding: 2rpx 6rpx;
}

.s-btn-tips {
  background-color: #ffae00;
}

.tips {
  font-size: 24rpx;
  color: #bcbcbc;
}

.s-yellow {
  color: #ffae00;
}

.coach-btn-box {
  width: 99rpx;
  height: 53rpx;
  border-radius: 4px;
  background-image: linear-gradient(to bottom, #ffd324, #ff7200);
  overflow: hidden;
  padding: 1px;
}

.coach-btn {
  line-height: 53rpx;
  text-align: center;
  color: #ffae00;
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background: #181818;
}

/**预约记录**/

.title-box {
  height: 60rpx;
  line-height: 60rpx;
}

.title {
  font-size: 24rpx;
  padding-left: 30rpx;
  color: #a1a1a1;
}

.box {
  width: 720rpx;
  height: 220rpx;
  margin: 0 auto;
  position: relative;
  background-image: linear-gradient(to bottom, #ffd324, #ff7200);
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  padding: 1px;
  overflow: hidden;
}

.box-img {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.mask-box {
  position: absolute;
  top: 1px;
  left: 1px;
  bottom: 1px;
  right: 1px;
  border-radius: 15rpx;
  background: rgba(0, 0, 0, 0.8);
}

.mask-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
}

.sign-title {
  width: 180rpx;
}

.month-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}

.number-row {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 20rpx 0;
}

.row-item {
  text-align: center;
}

.row-item-title {
  color: #fff;
  font-size: 24rpx;
}

.row-item-number {
  color: #fff;
  font-weight: bold;
  font-size: 55rpx;
  line-height: 1.1;
}
