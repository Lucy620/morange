/**index.wxss**/

/***轮播**/

.wrapper-box {
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%
}

.swiper-box {
  height: 200rpx;
  background: #3d3d3d;
}

swiper {
  height: 100%;
}

.slide-image {
  width: 100%;
}

/***tab栏**/

.tab-box {
  display: flex;
  align-items: center;
  height: 95.3rpx;
  background-color: #181818;
}

.row-box {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 26rpx;
  color: #fff;
}

.tab-icon {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

/***门店**/

.store-box {
  margin: 20rpx;
  background-color: #292929;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.scroll-box {
  height: 100%;
  display: flex;
  padding-bottom: 150rpx;
}

.store {
  width: 100%;
  height: 100%;
}

.store-title {
  width: 100%;
  color: #fff;
  background-color: #292929;
  position: relative
}

.store-name {
  font-size: 26rpx;
  margin-top: 12rpx;
  margin-left: 12rpx;
}

.store-address {
  font-size: 20rpx;
  line-height: 32rpx;
  margin-bottom: 12rpx;
  margin-left: 12rpx;

}

.heart {
  width: 44rpx;
  height: 44rpx;
}
.phone{
  width: 44rpx;
  height: 44rpx;
}

.tip-title {
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/**筛选门店 门店主题-**/

.screen-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.cover-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
}

.screen-title-box {
  display: flex;
  align-items: center;
  background-color: #343434;
  padding-left: 30rpx;
  position: relative;
  z-index: 1;
  height: 100rpx;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.button-confirm {
  position: absolute;
  right: 4vw;
  height: 50rpx;
  border-radius: 12rpx;
  width: 100rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(#ff9c00, #FFBA00);
}

.screen-icon {
  width: 50rpx;
  height: 50rpx;
}

.screen-title {
  margin-left: 4vw;
  color: #fff;
  height: 42rpx;
  border-bottom: 2rpx transparent solid;
}


.area-box {
  top: 0;
  bottom: 0;
  width: 33vw;
  height: 100%;
  text-align: center;
  background-color: #262626;
  border-right: 4rpx #343434 solid;
}

.scroll-view-box {
  height: 100%;
}

.area-item {
  font-size: 24rpx;
  color: #696969;
  margin: 0 12rpx 24rpx 12rpx;
  border-radius: 12rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #515151;
}

.text-white{
  color: #fff;
  background-color: #262626;
  margin-bottom: 0;
}

.select-area-item {
  color: #131313;
  background-image: linear-gradient(#ff9c00, #FFBA00);
}

.area-list {
  flex: 1;
}

.area-list {
  position: absolute;
  top: 100rpx;
  left: 33vw;
  width: 67vw;
  bottom: 0;
  text-align: center;
  background-color: #262626;
}

.theme-box {
  background-color: #262626;
  flex-wrap: wrap;
  width: 100%;
  flex: 1;
}

.theme-item {
  width: 28vw;
  color: #696969;
  margin-left: 4vw;
  margin-top: 4vw;
  font-size: 24rpx;
  border-radius: 32rpx;
  height: 64rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #515151;
}

.select-theme-item {
  color: #000;
  background:linear-gradient(0deg,rgba(255,135,28,1),rgba(255,167,14,1));
  box-shadow:0px 6px 8px 0px rgba(0, 0, 0, 0.5);
}


.icon-box {
  position: absolute;
  right: 28rpx;
  height: 100%;
  display: flex;
  align-items: center
}


