/**邀请海报**/

.poster-box {
  position: relative;
}

.poster {
  width: 100%;
}

.share-btn-box {
  display: flex;
  flex-direction: column;
  width: 86%;
  padding: 20rpx;
  background-color: #FFF6C1;
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  color: #000;
  text-align: center;
  margin: auto;
  margin-top: -140rpx;
  z-index: 1;
}

.icon-box {
  display: flex;
  justify-content: space-around;
  margin-top: 64rpx;
}

.icon-row {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  margin-bottom: 20rpx;
  width: 84rpx;
  height: 84rpx;
  background-color: transparent;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

button::after {
  border: none;
}

.wechat {
  background-image: url(https://assets.morangefitness.com/wechat.png);
}

.wechat-circle {
  background-image: url(https://assets.morangefitness.com/wechat_circle.png);
}

.title {

}


.btn {
  width: 709.3rpx;
  height: 99.3rpx;
  font-size: 33.3rpx;
  line-height: 99.3rpx;
  text-align: center;
  margin: 20rpx auto 30rpx;
  color: #000;
  background: url(https://boringcdn.nanningboring.com/molicheng/btn1.png);
  background-size: 100%;
  border-radius: 6.7rpx;
}

/**记录**/

.record-box {
  width: 710rpx;
  height: 221.3rpx;
  background-color: #494949;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 13.3rpx;
  margin: 0 auto;
  margin-top: 64rpx;
}

.record-title-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 48rpx;
}

.record-title {
  font-size: 24rpx;
  color: #fff;
}

.record-tips {
  font-size: 24rpx;
  color: #bcbcbc;
}

.record {
  height: 173.3rpx;
  display: flex;
  align-items: center;
  background: #3a3a3a;
  border-bottom-left-radius: 13.3rpx;
  border-bottom-right-radius: 13.3rpx;
}

.record-row {
  flex: 1;
  color: #ff9d1e;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  position: relative; 
}
.record-row::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 2rpx;
  height: 100%;
  pointer-events: none;
  background-color: #bcbcbc;
}

.record-row:last-child:after {
  width: 0;
  height: 0;
  background: none;
}

.record-tips {
  color: #bcbcbc;
  font-size: 20rpx;
}

/**规则**/

.rule-box {
  padding: 70rpx 20rpx;
}

.rule-row {
  display: flex;
  align-items: center;
}

.line {
  flex: 1;
  height: 1px;
  background: #494949;
}

.rule-title {
  font-size: 20rpx;
  color: #bcbcbc;
  padding: 0 20rpx;
}

.rule-text {
  color: #bcbcbc;
  font-size: 18.7rpx;
  margin-top: 30rpx;
  text-align: justify;
}

.rule {
  margin-bottom: 30rpx;
}
