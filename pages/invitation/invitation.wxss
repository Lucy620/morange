/* pages/Invitation/Invitation.wxss */

/**邀请海报**/

.poster-box {
  position: relative;
}

.poster {
  width: 100%;
}

.share-btn-box {
  display: flex;
  flex-direction: column;
  width: 640rpx;
  padding: 20rpx;
  background-color: #FFF6C1;
  background-image: url(https://assets.morangefitness.com/blur.png);
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  color: #000;
  text-align: center;
  margin: auto;
  margin-top: -140rpx;
  z-index: 1;
  position: relative;
  background-size: 102%;
  background-position: center;
}

.morange_bg {
  position: absolute;
  height: 60rpx;
  margin: auto;
  margin-top: 20rpx;
  left: 0;
  right: 0;
}

.share-bg {
  width: 100%;
  height: 100%;
  filter: blur(2px);
  position: absolute;
}

.icon-box {
  display: flex;
  justify-content: space-around;
  margin-top: 64rpx;
}

.icon-row {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  margin-bottom: 20rpx;
  width: 84rpx;
  height: 84rpx;
  background-color: transparent;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

button::after {
  border: none;
}

.wechat {
  background-image: url(https://assets.morangefitness.com/wechat.png);
}

.wechat-circle {
  background-image: url(https://assets.morangefitness.com/wechat_circle.png);
}

.title {

}


.btn {
  width: 709.3rpx;
  height: 99.3rpx;
  font-size: 33.3rpx;
  line-height: 99.3rpx;
  text-align: center;
  margin: 20rpx auto 30rpx;
  color: #000;
  background: url(https://assets.morangefitness.com/btn1.png);
  background-size: 100%;
  border-radius: 6.7rpx;
}

/**记录**/

.record-box {
  padding-top: 188rpx;
  padding-bottom: 48rpx;
  width: 710rpx;
  background-color: #333333;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 13.3rpx;
  margin: 0 auto;
  margin-top: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -140rpx;
}

.text-active {
  color: #FF9C00;
}

.record-title-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 48rpx;
}

.record-title {
  font-size: 24rpx;
  color: #fff;
}

.record-tips {
  font-size: 24rpx;
  color: #bcbcbc;
}

.record {
  height: 173.3rpx;
  display: flex;
  align-items: center;
  background: #3a3a3a;
  border-bottom-left-radius: 13.3rpx;
  border-bottom-right-radius: 13.3rpx;
}

.record-row {
  display: flex;
  align-items: center;
  width: 614rpx;
  padding-bottom: 48rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
  margin: auto;
}

.nickname {
  color: #fff;
  margin-left: 24rpx;
  flex: 1;
}

.status {
  color: #9C9C9C;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.record-row::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 2rpx;
  height: 100%;
  pointer-events: none;
  background-color: #bcbcbc;
}

.record-row:last-child:after {
  width: 0;
  height: 0;
  background: none;
}

.record-tips {
  color: #bcbcbc;
  font-size: 20rpx;
}

/**规则**/

.rule-box {
  padding: 70rpx 20rpx;
}

.rule-row {
  display: flex;
  align-items: center;
}

.line {
  flex: 1;
  height: 1px;
  background: #494949;
}

.rule-title {
  font-size: 20rpx;
  color: #bcbcbc;
  padding: 0 20rpx;
}

.rule-text {
  color: #bcbcbc;
  font-size: 24rpx;
  margin-top: 30rpx;
  text-align: justify;
  padding-right: 48rpx;
  padding-left: 48rpx;
}

.rule {
  margin-bottom: 30rpx;
}

.title-box {
  height: 84rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 120rpx;
  padding-right: 120rpx;
}

.line {
  width: 120rpx;
  height: 2rpx;
  background-color: #fff;
}
.title {
  color: #fff;
  margin-left: 48rpx;
  margin-right: 48rpx;
}

.result {
  color: #9C9C9C;
  font-size: 24rpx;
}