/* 新版样式 */

.wrapper {
  width: 660rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}

.wrapper .avatar {
  width: 100%;
  height: 350rpx;
  display: flex;
  margin: 100rpx 0 0;
  border-bottom: 1px solid #f1f1f1;
}

.wrapper .avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: auto auto;
}

.wrapper .tips {
  color: #fff;
  border-top: 1px solid #dad9d9;
  padding: 30rpx 0 20rpx;
  font-size: 30rpx;
}

.wrapper .min_tips {
  font-size: 26rpx;
  color: #a0a0a0;
}

.wrapper .btn {
  width: 100%;
  height: 80rpx;
  margin: 150rpx 0 0;
  text-align: center;
  line-height: 80rpx;
  background: url(https://boringcdn.nanningboring.com/molicheng/ranking-btn.png);
  background-size: 100%;
  color: #000;
  font-size: 30rpx;
  border-radius: 6rpx;
  border: 0;
}
.wrapper .btn-cancel {
  width: 100%;
  height: 80rpx;
  margin: 50rpx 0 0;
  text-align: center;
  line-height: 80rpx;
  background: rgb(209, 208, 208);
  background-size: 100%;
  color: #000;
  font-size: 30rpx;
  border-radius: 6rpx;
  border: 0;
}