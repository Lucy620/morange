/* pages/confirm_order/coupon.wxss */

.tips-more-box {
  width: 500rpx;
  margin: 50rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #fff;
}

.tips-more {
  display: inline-block;
  padding: 0 15rpx;
  color: #fff;
  font-size: 26rpx;
}

/**代金券**/



.wrap {
  width: 150rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: -25rpx;
  overflow: hidden;
}

.silk-ribbon {
  display: inline-block;
  width: 210rpx;
  height: 40rpx;
  line-height: 35rpx;
  position: absolute;
  top: -15rpx;
  right: -52rpx;
  overflow: hidden;
  transform: rotate(43deg);
  -ms-transform: rotate(43deg);
  -moz-transform: rotate(43deg);
  -webkit-transform: rotate(43deg);
  -o-transform: rotate(43deg);
  background: #000;
}

.check-icon {
  position: absolute;
  top: 5%;
  right: 32%;
  width: 45rpx;
  height: 45rpx;
  margin: 0 auto;
  transform: rotate(-35deg);
}



.coupon-row:last-child {
  border: 0;
}


.close-iocm {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
}

.suffix{
  font-size: 24rpx;
  margin-top: 36rpx;
  font-weight: 300;
  margin-left: 4rpx;
}
