/* pages/cash_coupon/cash_coupon.wxss */

.wrapper {
  position: fixed;
}

/**搜索**/

.search-wrapper {
  width: 734rpx;
  height: 84rpx;
  margin: -20rpx auto;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-box {
  flex: 1;
  height: 100%;
  padding-left: 20rpx;
}

.search-btn {
  width: 186rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-top-right-radius: 42rpx;
  border-bottom-right-radius: 42rpx;
  background-image: linear-gradient(0deg,rgba(255,144,46,1),rgba(255,186,0,1));
}

/**代金券提示**/

.coupon-tips-box {
  width: 731.3rpx;
  height: 168rpx;
  margin: 0 auto;
  background-color: #000;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 13.3rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: solid 2.7rpx rgba(255, 255, 255, 0.17);
}

.coupon-tips-icon {
  width: 130.7rpx;
  height: 112.7rpx;
  padding-left: 20rpx;
}

.tips-box {
  text-align: right;
  flex: 1;
  padding-right: 20rpx;
}

.tips-title {
  font-size: 33.3rpx;
  color: #fff;
}

.tips-btn {
  margin-top: 10rpx;
  color: #ffc119;
  font-size: 26.7rpx;
}

/**代金券**/





.coupon-details {
  flex: 1;
}

.coupon-text {
  color: #000;
}

.coupon-text-tips {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #000;
  text-decoration: underline;
}

.coupon-money {
  display: inline-block;
  font-size: 48rpx;
  color: #9f3c00;
  font-weight: bold;
}

.coupon-box-date {
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  background: url(https://boringcdn.nanningboring.com/molicheng/coupon-box-date-bg.png);
  background-size: 100%;
}

.coupon-date {
  padding-left: 20rpx;
  font-size: 20rpx;
  color: #000;
}

/**无代金券提示**/

.no-coupon-tips {
  text-align: center;
  margin-top: 50rpx;
}

.coupon-tips-title {
  color: #fff;
  font-size: 32rpx;
}

.coupon-tips-text{
  font-size: 24rpx;
  color: #bcbcbc;
}

.mask-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}

.mask-row-box {
  width: 734rpx;
  margin: 150rpx auto;
  position: relative;
}

.mask-title {
  color: #000;
  padding: 20rpx 0;
  background: #ff9110;
  border-top-right-radius: 13rpx;
  border-top-left-radius: 13rpx;
  text-align: center;
}

.mask-text-box {
  background: #fff;
  color: #000;
  padding: 25rpx;
  border-bottom-right-radius: 13rpx;
  border-bottom-left-radius: 13rpx;
}

.coupon-row {
  font-size: 26rpx;
  display: flex;
  padding: 25rpx 0;
  border-bottom: 1px solid #bcbcbc;
}
.coupon-row:last-child{
  border: 0;
}
.coupon-tips {
  color: #000;
}

.mask-text {
  flex: 1;
  color: #bcbcbc;
}

.close-iocm{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
}
.home-btn {
  position: fixed;
  right: 15rpx;
  bottom: 100rpx;
  width: 111rpx;
  height: 111rpx;
}

.coupon-top-bg {
  width: 100%;
}
