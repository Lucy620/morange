/* pages/cash_coupon/invalid_.wxss */

.coupon-row {
  width: 731rpx;
  margin: 0 auto;
  background-color: #5c5c5c;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.row-bg {
  width: 100%;
  height: 100%;
  background: url(https://assets.morangefitness.com/row-bg.png);
  background-size: 100%;
}

.details {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 105rpx;
  padding: 10rpx 25rpx;
  position: relative;
  z-index: 2;
}

.details-text {
  flex: 1;
}

.coupon-title {
  font-size: 24rpx;
  color: #858585;
}

.coupon-introduce {
  font-size: 24rpx;
  color: #858585;
  margin-top: 10rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.money {
  font-size: 48rpx;
  color: #858585;
  font-weight: bold;
}

.date-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 49rpx;
  padding: 0 25rpx;
  background: url(https://assets.morangefitness.com/date-bg.png);
  background-size: 100%;
}

.date {
  font-size: 20rpx;
  color: #5c5c5c;
}

.date-tips {
  font-size: 20rpx;
}

.invalid-icon {
  width: 91rpx;
  height: 75rpx;
  position: absolute;
  top: 20rpx;
  right: 100rpx;
  z-index: 1;
}

.tips {
  text-align: center;
  color: #5c5c5c;
  margin-top: 40rpx;
  font-size: 20rpx;
}
