/* pages/store/private.wxss */

.tips-box {
  text-align: center;
}

.tips-img {
  width: 250rpx;
  height: 250rpx;
  margin-top: 20rpx;
}

.tips-text {
  color: #fff;
}

.tips-more-box {
  width: 500rpx;
  margin: 50rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #818181;
}

.tips-more {
  display: inline-block;
  padding: 0 15rpx;
  color: #818181;
  font-size: 26rpx;
}

/**教练**/

.box {
  display: flex;
  align-items: center;
  height: 162rpx;
  padding: 0 25rpx;
  background-color: #181818;
  margin-bottom: 5rpx;
  position: relative;
}

.coach {
  width: 96.7rpx;
  height: 96.7rpx;
  background-color: #272727;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}
.box-row{
  flex: 1;
  display: flex;
  align-items: center;
}
.mid {
  flex: 1;
  margin-left: 25rpx;
}

.title {
  color: #fff;
  height: 50rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 50rpx;
  font-size: 26.7rpx;
}

.attributes-box {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.name {
  display: flex;
  align-items: center;
  color: #bcbcbc;
  font-size: 20rpx;
}

.garden {
  width: 10rpx;
  height: 10rpx;
  margin: 0 10rpx;
  border-radius: 50%;
  background: #bcbcbc;
}

.price-box {
  font-size: 24rpx;
  color: #fff;
}

.s-yellow {
  color: #ffae00;
  margin-right: 10rpx;
}
.btn {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  background:linear-gradient(0deg,rgba(255,144,46,1),rgba(255,186,0,1));
  background-size: 100%;
  position: relative;
  z-index: 1;
}

.wrap {
  width: 150rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
  overflow: hidden;
}

.silk-ribbon {
  display: inline-block;
  text-align: center;
  width: 165rpx;
  height: 35rpx;
  line-height: 35rpx;
  position: absolute;
  top: 10rpx;
  right: -55rpx;
  overflow: hidden;
  transform: rotate(43deg);
  -ms-transform: rotate(43deg);
  -moz-transform: rotate(43deg);
  -webkit-transform: rotate(43deg);
  -o-transform: rotate(43deg);
  background: #ff6a1f;
  color: #fff777;
  font-size: 18rpx;
}

.full {
  background: #424242;
  color: #bcbcbc;
}

.full-btn {
  background: none;
  border-radius: 10rpx;
  border: solid 3rpx #424242;
  color: #bcbcbc;
}
